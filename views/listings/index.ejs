<% layout('layouts/boilerplate') -%>
<body>
    <h3>All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let data of allList){ %>
        <a href="/listings/<%=data._id%>" class="card-listing-link">
            <div class="card col listing-card" >
                <img src="<%=data.image%>" class="card-img-top" alt="listing" style="height: 20rem"/>
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                      <b><%=data.title %></b> <br>
                      &#8377; <%=data.price.toLocaleString("en-IN")%>
                  </p>
                </div>
              </div>
              <%}%>
            </div>
        </a>
</body>
